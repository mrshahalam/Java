package test;
import java.util.Scanner;  

/*
 *  
*/

public  class demo {
	
	public static void main(String[] args)   throws Exception
	{ 
		System.out.print("Enter the  n number : ");
		Scanner sc = new Scanner(System.in);
		int  n = sc.nextInt();
		int temp=n;
		int r=0,sum=0;
		while(n>0)
		{
			r=n%10;
			n=n/10;
			sum=(sum*10)+r;	
		}
		if(temp==sum)
		System.out.printf(" %d  is palindrome number",sum);
		
		else
			System.out.printf("Given number is not  palindrome number",sum);

		
		
	}	
}
