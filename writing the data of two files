package  first_project;									
import java.util.*;
import java.io.*;


  
		 public class first_class extends Thread
		 {
			  public static void main(String args[])throws Exception{  
				  FileInputStream fin1=new FileInputStream("D:\\testout.txt");    
				   FileInputStream fin2=new FileInputStream("D:\\text.txt");    
				   FileOutputStream fout=new FileOutputStream("D:\\abc.txt");      
				   SequenceInputStream sis=new SequenceInputStream(fin1,fin2);    
				   int i;    
				   while((i=sis.read())!=-1)    
				   {    
				     fout.write(i);        
				   }    
				   sis.close();    
				   fout.close();      
				   fin1.close();      
				   fin2.close();       
				   System.out.println("Success..");    
		    }  

		}
						
					
